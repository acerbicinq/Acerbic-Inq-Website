---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting";
const pageTitle = "Acerbic Inq";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="nav-items">
    <div class="">
        <div class="main-link learning">Learning Out Loud</div>
        <div class="support-link">
            <div class="sub-link articles"><a href="articles.html">Multimedia Articles</a></div>
            <div class="sub-link courses"><a href="courses.html">Courses</a></div>
        </div>
    </div>
    <div class="">
        <div class="main-link creative">Creative Projects</div>
        <div class="support-link">
            <div class="sub-link music"><a href="music.html">Music</a></div>
            <div class="sub-link writing"><a href="writing.html">Writing</a></div>
        </div>
    </div>
    <div class="main-link about"><a href="about.html">About</a></div>
    <div class="main-link shop"><a href="shop.html">Shop</a></div>
    </div>
</BaseLayout>

<style>
/* Homepage Links */
h1 {
    font-size: 5em;
    
}

.main-link {
  font-size: 2em;
  & a {
    text-decoration: underline dotted #303030;
    
  }
  & a:hover, 
  & a:focus {
    font-style: italic;
  }
  @media (min-width: 620px) {
    font-size: 2em;
  }
}

.sub-link {
  font-size: 1.5em;
  
  background-image:  radial-gradient(#edc06a 1px, transparent 1px), radial-gradient(#edc06a 0.5px, #f1d4a1 0.8px);
  background-size: 15px 15px;
  padding: 0 0.5em;
  margin: 0.1em;
  margin-left: 15px;
  border-radius: 10px;

  & a {color: black;
    text-decoration: none;
  }
  
  & a:hover, 
   a:focus {
    font-style: italic;
  }
  @media (min-width: 620px) {
    font-size: 1.5em;
  }
}

</style>